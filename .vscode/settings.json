{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.indentSize": 2,
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.ts": "always"
  },
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "prettier.enable": true,
  "prettier.requireConfig": true,
  "prettier.configPath": "prettier.config.ts",
  "prettier.prettierPath": "./node_modules/prettier",
  "prettier.embeddedLanguageFormatting": "auto",
  "npm.packageManager": "pnpm",
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.folders.associations": {
    "certification": "bibliography",
    "artifacthub": "container"
  },
  "jest.enable": true,
  "jest.jestCommandLine": "NODE_OPTIONS=\"\" pnpm jest",
  "jest.rootPath": ".",
  "chat.agent.enabled": true,
  "chat.tools.terminal.autoApprove": {
    // Approved project-specific commands
    //
    // @oktomusic/backend
    "pnpm --filter @oktomusic/backend build": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/backend start": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/backend start:dev": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/backend start:debug": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/backend lint": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/backend lint:fix": {
      "approve": true,
      "matchCommandLine": true
    },
    // @oktomusic/frontend
    "pnpm --filter @oktomusic/frontend dev": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/frontend build": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/frontend lint": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/frontend lint:fix": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/frontend po:extract": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/frontend po:compile": {
      "approve": true,
      "matchCommandLine": true
    },
    // @oktomusic/lyrics
    "pnpm --filter @oktomusic/lyrics build": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/lyrics dev": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/lyrics typecheck": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/lyrics lint": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/lyrics lint:fix": {
      "approve": true,
      "matchCommandLine": true
    },
    // @oktomusic/api-schemas
    "pnpm --filter @oktomusic/api-schemas build": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/api-schemas dev": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/api-schemas typecheck": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/api-schemas lint": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/api-schemas lint:fix": {
      "approve": true,
      "matchCommandLine": true
    },
    // @oktomusic/vite-sri-manifest
    "pnpm --filter @oktomusic/vite-sri-manifest build": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/vite-sri-manifest dev": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/vite-sri-manifest lint": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm --filter @oktomusic/vite-sri-manifest lint:fix": {
      "approve": true,
      "matchCommandLine": true
    },
    // Approved common safe commands
    "cd": true,
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "which": true,
    "basename": true,
    "dirname": true,
    "realpath": true,
    "readlink": true,
    "stat": true,
    "file": true,
    "du": true,
    "df": true,
    "sleep": true,
    "grep": true,
    "git status": true,
    "git log": true,
    "git show": true,
    "git diff": true,
    "git grep": true,
    "git branch": true,
    "/^git branch\\b.*-(d|D|m|M|-delete|-force)\\b/": false,
    "Get-ChildItem": true,
    "Get-Content": true,
    "Get-Date": true,
    "Get-Random": true,
    "Get-Location": true,
    "Write-Host": true,
    "Write-Output": true,
    "Split-Path": true,
    "Join-Path": true,
    "Start-Sleep": true,
    "Where-Object": true,
    "/^Select-[a-z0-9]/i": true,
    "/^Measure-[a-z0-9]/i": true,
    "/^Compare-[a-z0-9]/i": true,
    "/^Format-[a-z0-9]/i": true,
    "/^Sort-[a-z0-9]/i": true,
    "column": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": false,
    "date": true,
    "/^date\\b.*(-s|--set)\\b/": false,
    "find": true,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
    "sort": true,
    "/^sort\\b.*-(o|S)\\b/": false,
    "tree": true,
    "/^tree\\b.*-o\\b/": false,
    "/\\(.+\\)/s": {
      "approve": false,
      "matchCommandLine": true
    },
    "/\\{.+\\}/s": {
      "approve": false,
      "matchCommandLine": true
    },
    "/`.+`/s": {
      "approve": false,
      "matchCommandLine": true
    },
    "rm": false,
    "rmdir": false,
    "del": false,
    "Remove-Item": false,
    "ri": false,
    "rd": false,
    "erase": false,
    "dd": false,
    "kill": false,
    "ps": false,
    "top": false,
    "Stop-Process": false,
    "spps": false,
    "taskkill": false,
    "taskkill.exe": false,
    "curl": false,
    "wget": false,
    "Invoke-RestMethod": false,
    "Invoke-WebRequest": false,
    "irm": false,
    "iwr": false,
    "chmod": false,
    "chown": false,
    "Set-ItemProperty": false,
    "sp": false,
    "Set-Acl": false,
    "jq": false,
    "xargs": false,
    "eval": false,
    "Invoke-Expression": false,
    "iex": false
  },
  "files.associations": {
    "_headers": "plaintext" // Cloudflare _headers file, tend to be misdetected as TypeScript
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never",
    "editor.quickSuggestions": {
      "strings": true,
      "other": true,
      "comments": false
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[xml]": {
    "editor.autoClosingBrackets": "never",
    "files.trimFinalNewlines": true,
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[caddyfile]": {
    "editor.insertSpaces": false,
    "editor.defaultFormatter": "matthewpi.caddyfile-support"
  },
  "[typst]": {
    "editor.defaultFormatter": "myriad-dreamin.tinymist"
  }
}
