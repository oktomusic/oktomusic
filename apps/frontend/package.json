{
  "name": "@oktomusic/frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "pnpm -w exec eslint -c eslint.config.ts apps/frontend",
    "lint:fix": "pnpm -w exec eslint -c eslint.config.ts --fix apps/frontend",
    "po:extract": "lingui extract",
    "po:compile": "lingui compile --typescript",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --single-thread --no-file-parallelism",
    "codegen": "graphql-codegen --config codegen.ts",
    "pwa-assets": "pwa-assets-generator"
  },
  "dependencies": {
    "@apollo/client": "^4.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@lingui/detect-locale": "^5.8.0",
    "@oktomusic/api-schemas": "workspace:^",
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "graphql": "^16.12.0",
    "graphql-ws": "6.0.6",
    "jotai": "^2.16.2",
    "jotai-devtools": "^0.13.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-router": "^7.12.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "6.1.1",
